<script>
  // fill year
  document.getElementById('year').textContent = new Date().getFullYear();

  function updatePrice(){
    const sel = document.getElementById('productSelect');
    const opt = sel.options[sel.selectedIndex];
    const base = parseFloat(opt.getAttribute('data-price') || 0);
    const customWrap = document.getElementById('customAmountWrap');
    const customInput = document.getElementById('customAmount');
    let price = base;

    if(opt.value === 'custom'){
      customWrap.style.display = 'block';
      const c = parseFloat(customInput.value || 0);
      price = isNaN(c) ? 0 : c;
    } else {
      customWrap.style.display = 'none';
      customInput.value = '';
    }

    document.getElementById('calcPrice').value = price.toFixed(2) + ' USDT';
  }

  updatePrice();

  function handleSubmit(e){
    e.preventDefault();
    const user = document.getElementById('mlbbUser').value.trim();
    const product = document.getElementById('productSelect').value;
    const calc = document.getElementById('calcPrice').value;
    const contact = document.getElementById('contact').value.trim();
    const tx = document.getElementById('txHash').value.trim();

    const resultDiv = document.getElementById('result');
    if(!user || !contact || !tx){
      resultDiv.innerHTML = '<div class="muted">ကျေးဇူးပြုပြီး လိုအပ်သော အချက်အလက်များကို ဖြည့်ပါ။</div>';
      return;
    }

    // Because this is static site, we can't truly submit — show instructions + copyable summary
    const summary = `
      <div class="success">
        <strong>Order ready — copy & send to Telegram</strong>
        <p class="small">သင်၏ အော်ဒါ နှင့် Transaction အချက်အလက်များကို Telegram သို့ ပို့ပါ။</p>
        <pre style="white-space:pre-wrap;margin-top:8px;color:#02121e;background:rgba(255,255,255,0.02);padding:8px;border-radius:6px">
MLBB User: ${user}
Product: ${product === '11' ? '11 Diamonds' : product === 'weekly' ? 'Weekly Pass' : 'Custom'}
Amount (USDT): ${document.getElementById('calcPrice').value}
Contact: ${contact}
TX Hash: ${tx}
Pay to (BSC): 0x08deb3c238f07...
Binance UID: 989274313
Telegram: t.me/opposite110
        </pre>
        <div class="note">သက်ဆိုင်ရာ Telegram ကို open လုပ်ပြီး အထက်ပါ စာသားကို paste လုပ်ပို့ပါ။</div>
      </div>
    `;
    resultDiv.innerHTML = summary;

    // Try to copy to clipboard for convenience
    try{
      const copyText = `MLBB User: ${user}\nProduct: ${product}\nAmount: ${document.getElementById('calcPrice').value}\nContact: ${contact}\nTX: ${tx}\nWallet: 0x08deb3c238f07...\nBinance UID: 989274313\nTelegram: t.me/opposite110`;
      navigator.clipboard.writeText(copyText);
    }catch(err){
      // ignore
    }
    return false;
  }

  function fillSample(){
    document.getElementById('mlbbUser').value = 'Player123';
    document.getElementById('productSelect').value = '11';
    updatePrice();
    document.getElementById('contact').value = '@yourtg';
    document.getElementById('txHash').value = '0xEXAMPLEHASH...';
  }
</script>
